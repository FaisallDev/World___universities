<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/backgroundAboutGreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartApp">

<!--  Start  Three Words Above (Header)-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            tools:ignore="NestedWeights">

            <ahmed.jaafuar.faisal.worlduniversities.Gabriola_Font
                android:id="@+id/chooseText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:paddingStart="150dp"
                android:text="choose"
                android:textColor="@color/greenText"
                android:textAlignment="center"
                android:textSize="@dimen/choodeURdes"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="12"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ahmed.jaafuar.faisal.worlduniversities.Gabriola_Font
            android:id="@+id/yourText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="your"
            android:textColor="@color/greenText"
            android:textSize="@dimen/choodeURdes"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            />
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ahmed.jaafuar.faisal.worlduniversities.Gabriola_Font
            android:id="@+id/destinationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="destination"
            android:textColor="@color/greenText"
            android:textSize="@dimen/choodeURdes"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:paddingEnd="40dp"
            android:textAlignment="textStart"
            tools:ignore="RtlSymmetry" />
        </RelativeLayout>
    </LinearLayout>
    <!--   End Three Words Above (Header)-->


<!--    Start Middle Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.55"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_weight="95"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/frameFirstBtn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:background="@drawable/first_corner_all_ways_black">

        <Button
            android:id="@+id/time_table"
            android:layout_margin="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fisrt_corner_all_ways"
            android:text="@string/your_time_table"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textColor="@color/textColorBtnPages"/>
        </FrameLayout>
        </RelativeLayout>


        <RelativeLayout
            android:layout_weight="90"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/secondFramBtn"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/second_frame_corner_all_ways_black">

            <Button
                android:id="@+id/Faculty_Border"
                android:layout_width="218dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/second_corner_all_ways"
                android:paddingStart="20dp"
                android:text="@string/faculty_border"
                android:textAlignment="textStart"
                android:textColor="@color/textColorBtnPages"
                android:textSize="23sp"
                tools:ignore="RtlSymmetry" />

        </FrameLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="95"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/thirdFramBtn"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/third_frame_corner_all_ways_black">

            <Button
                android:id="@+id/UNi_news"
                android:layout_width="178dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@drawable/third_corner_all_ways"
                android:paddingStart="20dp"
                android:text="@string/uni_news"
                android:textAlignment="textStart"
                android:textColor="@color/textColorBtnPages"
                android:textSize="23sp"
                tools:ignore="RtlSymmetry" />

        </FrameLayout>

        </RelativeLayout>

    </LinearLayout>
    <!--    End Middle Buttons -->



<!--    Start Last part For Emojy-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4">

        <TextView
            android:id="@+id/face2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="20dp"
            android:text="@string/text_face_2"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/greenText"
            android:textSize="40sp"/>

        <ahmed.jaafuar.faisal.worlduniversities.lucida_handwriting
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sh3ar"
            android:textAlignment="center"
            android:textColor="@color/sh3ar"
            android:textSize="30sp"
            android:layout_above="@id/face2"/>
    </RelativeLayout>
    <!--    End Last part For Emojy-->

</LinearLayout>