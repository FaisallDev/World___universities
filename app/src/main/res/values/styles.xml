<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_text_style">
        <item name="android:background">@drawable/corner_above</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="lecs_time_middle_Vertical">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@color/borderColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="first_row_of_table_Vertical">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/borderColor</item>
    </style>

    <style name="second_row_of_table_Vertical">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/borderColor</item>
    </style>

    <style name="third_row_of_table_Vertical">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textColor">@color/borderColor</item>
    </style>
</resources>