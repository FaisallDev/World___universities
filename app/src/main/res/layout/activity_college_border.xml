<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundAboutGreen"
    tools:context=".college_border">

<!--   بداية أول قسم للـ اي دي والاسم -->
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_white_table">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="horizontal">

            

            <ahmed.jaafuar.faisal.worlduniversities.Calibri_font
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="190"
                android:text="000000"
                android:textColor="@color/borderColor"
                android:textAlignment="center"
                android:textSize="25sp"
                android:gravity="center"/>

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/borderColor" />



            <ahmed.jaafuar.faisal.worlduniversities.Calibri_font
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:text="Student - name"
                android:textSize="25sp"
                android:textColor="@color/borderColor"
                android:textAlignment="center"
                android:gravity="center"/>


        </LinearLayout>


        </LinearLayout>
        <!--    نهاية أول قسم للـ اي دي والاسم -->
    </LinearLayout>


    <!--        بداية ثاني قسم للمواد والدرجه-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30">

        <!--بداية القسم الايسر-->
        <LinearLayout
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_weight="45"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="45">

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100">

            </LinearLayout>

            <!--نهايه القسم الايسر-->
        </LinearLayout>

        <LinearLayout
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_weight="100">

        </LinearLayout>

    </LinearLayout>
<!--    نهاية ثاني قسم للمواد والدرجه-->


<!--    بدايه القسم الثالث و الاخير عدد الساعات والتخطي -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="110">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_margin="3dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_white_table"
                android:layout_margin="1dp"
                android:orientation="horizontal">

            <ahmed.jaafuar.faisal.worlduniversities.Calibri_font
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:textSize="@dimen/trakmy"
                android:gravity="center"
                android:text="2.25"/>

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/borderColor" />


            <ahmed.jaafuar.faisal.worlduniversities.Calibri_font
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:textSize="@dimen/trakmy"
                android:gravity="center"
                android:text="46"/>

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/borderColor" />

            <ahmed.jaafuar.faisal.worlduniversities.Calibri_font
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:textSize="@dimen/trakmy"
                android:gravity="center"
                android:text="2.25"/>

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/borderColor" />

            <ahmed.jaafuar.faisal.worlduniversities.Calibri_font
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:textSize="@dimen/trakmy"
                android:gravity="center"
                android:text="49.50"/>

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/borderColor" />

            <ahmed.jaafuar.faisal.worlduniversities.Calibri_font
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:textSize="@dimen/trakmy"
                android:gravity="center"
                android:text="22"/>

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/borderColor" />

            <ahmed.jaafuar.faisal.worlduniversities.Calibri_font
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:textSize="@dimen/trakmy"
                android:gravity="center"
                android:text="pass"/>

            </LinearLayout>  <!--End white Background-->

        </LinearLayout>

    </LinearLayout>
<!--    نهاية القسم الثالث و الاخير عدد الساعات والتخطي-->

</LinearLayout>