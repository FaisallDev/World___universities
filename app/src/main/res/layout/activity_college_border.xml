<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/holo_red_dark"
    tools:context=".college_border">

<!--   بداية أول قسم للـ اي دي والاسم -->
    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_white_table"
            tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="horizontal">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="190"
                android:gravity="center"
                android:text="000000"
                android:textAlignment="center"
                android:textColor="@color/borderColor"
                android:textSize="25sp" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/borderColor" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:gravity="center"
                android:text="Student - name"
                android:textAlignment="center"
                android:textColor="@color/borderColor"
                android:textSize="25sp" />


        </LinearLayout>


        </LinearLayout>
        <!--    نهاية أول قسم للـ اي دي والاسم -->
    </LinearLayout>


    <!--        بداية ثاني قسم للمواد والدرجه-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:baselineAligned="false">
        <!--بداية القسم الايسر-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:layout_margin="1dp"
                android:background="@drawable/background_white_table"
                android:layout_marginEnd="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:background="@drawable/border">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Subject's"
                        android:layout_weight="100"
                        android:textAlignment="center"
                        android:gravity="center||center_horizontal||center_vertical"/>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/borderColor" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="200"
                        android:text="C.H"
                        android:textAlignment="center"
                        android:gravity="center||center_horizontal||center_vertical"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:layout_margin="1dp"
                android:background="@drawable/background_white_table"
                android:layout_marginStart="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:text="Mark"
                        android:textAlignment="center"
                        android:gravity="center||center_vertical||center_horizontal"
/>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>
<!--    نهاية ثاني قسم للمواد والدرجه-->


<!--    بدايه القسم الثالث و الاخير عدد الساعات والتخطي -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="108">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:layout_margin="3dp"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_white_table"
                android:layout_margin="1dp"
                android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:textSize="@dimen/trakmy"
                android:gravity="center"
                android:text="2.25"/>

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/borderColor" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:textSize="@dimen/trakmy"
                android:gravity="center"
                android:text="46"/>

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/borderColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:textSize="@dimen/trakmy"
                android:gravity="center"
                android:text="2.25"/>

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/borderColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:textSize="@dimen/trakmy"
                android:gravity="center"
                android:text="49.50"/>

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/borderColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:textSize="@dimen/trakmy"
                android:gravity="center"
                android:text="22"/>

            <View
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/borderColor" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="100"
                android:textSize="@dimen/trakmy"
                android:gravity="center"
                android:text="pass"/>

            </LinearLayout>  <!--End white Background-->

        </LinearLayout>

    </LinearLayout>
<!--    نهاية القسم الثالث و الاخير عدد الساعات والتخطي-->

</LinearLayout>